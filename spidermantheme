        <script>    
            function changeColorTo(colorName){
                document.body.style.color= colorName;
            }
            
            function changeColorFrom(){
                document.body.style.color = "black";
            }
            
            function makeBold(){
                document.body.style.fontWeight= "bold";
            }
            
            function unBold(){
                document.body.style.fontWeight= "normal";
            }
            
        </script>
        
    </head>
